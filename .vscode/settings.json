{
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "88"],
  "python.formatting.blackPath": "black",
  "python.formatting.blackOnSave": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pylintArgs": ["--max-line-length=88", "--disable=C0114,C0115,C0116"],
  "python.linting.mypyArgs": ["--ignore-missing-imports"],
  "python.linting.banditEnabled": true,
  "python.linting.flake8Args": ["--max-line-length=88", "--ignore=E203,W503,F405,W0401"],
  "editor.formatOnSave": true,
  "peacock.color": "#215732",
  "python.analysis.extraPaths": ["./src"]
}
